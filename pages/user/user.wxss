/* pages/user/user.wxss */

.user-info {
    height: 30vh;
    background-color: var(--themeColor);
}

.user-info .user-show {
    position: relative;
    padding: 10rpx;
}

.user-info .user-show .user-login-btn {
    margin: 0 auto;
    width: 160rpx;
    /* height: 100rpx; */
    display: block;
    /* border: 1px solid #888; */
    text-align: center;
    font-size: 32rpx;
    color: #eee;
    /* box-shadow: 1rpx 0rpx 10rpx black; */
}

.user-info .user-show .user-avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50% 50%;
    /* position: absolute;
    left: 50%;
    top: 100%; */
    /* transform: translate(-50%, -50%); */
    margin: 40rpx auto;
    display: block;
    box-shadow: 4rpx 4rpx 10rpx black;
}

.user-info .user-show .user-login-btn view {
    margin-top: -15%;
}

.bottom-bg {
    position: absolute;
    background-color: #edece8;
    width: 100%;
    height: 75%;
    z-index: -1;
}
.collect-info,
.my-order,
.address,
.app-info,
.app-recommend {
    width: 90%;
    background-color: #fff;
    margin: 5% auto;
    padding: 20rpx;
    color: #666
}
.collect-info {
    display: flex;
    justify-content: space-around;
    margin-top: -5%;
}

.collect-info navigator {
    text-align: center;
}

.collect-info navigator .collect-num {
    color: var(--themeColor);
}

/* .collect-info navigator .collect-name {
    color: #666;
} */

.my-order {
    display: flex;
    flex-direction: column;
    padding: 10rpx;
}

.my-order .order-title {
    /* flex: 2; */
    /* color: #666; */
    border-bottom: 1rpx solid #ccc;
    font-size: 32rpx;
    padding: 10rpx;
}

.my-order .order-content {
    flex: 3;
    display: flex;
    justify-content: space-between;
    padding: 20rpx 20rpx 5rpx 20rpx;
}

.my-order .order-content navigator {
    display: flex;
    flex-direction: column;
}

.my-order .order-content navigator .order-icon {
    padding-bottom: 10rpx;
}

.my-order .order-content navigator .order-name {
    color: #666;
}

.app-info {
    display: flex;
    flex-direction: column;
    /* box-sizing: border-box; */
    padding-top: 0;
    padding-bottom: 0;
    /* margin-top: 10rpx;
    margin-bottom: 10rpx; */
}

.app-info .app-info-item {
    padding: 10rpx 0 10rpx;
    margin: 10rpx 0 10rpx 5rpx;
    /* line-height: 32rpx; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #ccc;
}
.app-info .app-info-item:last-child {
    /* margin: 0;
    padding: 0; */
    border: 0;
}