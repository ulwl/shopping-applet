/* pages/goods_detail/goods_detail.wxss */

.detail-swiper {
    height: 65vw;
    text-align: center;
}

.detail-swiper swiper {
    height: 100%;
}

.detail-swiper swiper .swiper-item image {
    width: 60%;
}

.good-price {
    color: var(--themeColor);
    font-size: 32rpx;
    padding: 15rpx;
    font-weight: bold;
}

.good-title {
    border: 5rpx solid #ccc;
    border-left: 0;
    border-right: 0;
    padding: 10rpx 0;
    display: flex;
}

.good-title .good-name {
    flex: 5;
    color: #000;
    font-size: 30rpx;
    padding: 0 10rpx;
    overflow: hidden;
}

.good-title .good-collect {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-left: 1rpx solid #000;
}

.good-info {
    padding: 0 20rpx;
}

.good-info .title-text {
    color: var(--themeColor);
    font-weight: 600;
    padding: 20rpx;
    font-size: 32rpx;
}

.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
    border-top: 1rpx solid #ccc;
    font-size: 26rpx;
}

.bottom-bar .bar-item {
    flex: 1;
}

.bottom-bar .bar-item {
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.bottom-bar .bar-item button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.bottom-bar .btn-addCart,
.bottom-bar .btn-buy {
    font-size: 30rpx;
    flex: 2;
    color: #fff;
    border-radius: 0;
    font-weight: bold;
}

.bottom-bar .btn-addCart {
    background-color: #ffa500;
}

.bottom-bar .btn-buy {
    background-color: #fb4f30;
}