/* pages/collect/collect.wxss */
.col-bar {
    height: 60rpx;
    display: flex;
    justify-content: space-around;
    font-size: 32rpx;
    line-height: 60rpx;
}
.col-bar .col-item {
    width: 100%;
    text-align: center;
}
.col-bar .active {
    border-bottom: 1rpx solid var(--themeColor);
}

.collect-main {
    display: flex;
    height: 60rpx;
    background-color: #eee;
    font-size: 28rpx;
    margin: 10rpx 0;
    /* padding: 10rpx 0; */
}

.collect-main .collect-title {
    display: flex;
    /* justify-content: ; */
}
.collect-main .collect-title .collect-item {
    height: 60rpx;
    margin: 0 30rpx;
    padding: 0 20rpx;
    line-height: 60rpx;
    border: 1rpx solid #ccc;
    background-color: #fff;
}

.collect-main .collect-title .active {
    color: var(--themeColor);
    border-color: currentColor;
}

.collect-content .collect-none {
    width: 400rpx;
    margin: 0 auto;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    padding-top: 100rpx;
}

.collect-content .collect-list {
    padding: 20rpx;
}

.collect-content .collect-list .collect-item {
    /* display: flex; */
    border-bottom: 1rpx solid #ccc;
}

.collect-content .collect-list .collect-item .item-img {
    /* flex: 2; */
    width: 50%;
    margin: 0 auto;
}

/* .collect-content .collect-list .collect-item .item-img image {
    
} */

.collect-content .collect-list .collect-item .collect-info {
    /* flex: 5; */
    display: flex;
    flex-direction: column;
    /* padding: 20rpx; */
}

.collect-content .collect-list .collect-item .item-info .item-title {
    color: #666;
}

.collect-content .collect-item .item-info .item-price {
    color: var(--themeColor);
    margin: auto 0;
    font-size: 32rpx;
    display: flex;
    justify-content:flex-end;
}
