/* pages/cart/cart.wxss */

.address-info {
    position: fixed;
    width: 100%;
    height: 60rpx;
    border-bottom: 1rpx solid #ed6a0c;
    font-size: 32rpx;
    background-color: #fffbe8;
}

.address-info .hasAddress {
    /* overflow: hidden; */
    /* display: -webkit-box; */
    /* justify-content: flex-start; */
    padding: 0 10rpx;
    line-height: 60rpx;
    white-space: nowrap;
    /* overflow: hidden; */
    /* text-overflow: ellipsis; */
    color: var(--themeColor);
}

.address-info .hasAddress text {
    /* width: 100%; */
    color: #000;
}

.address-info .withoutAddress {
    /* position: relative; */
    color: #ed6a0c;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.address-info .withoutAddress view {
    padding: 0 10rpx;
}

.address-info .withoutAddress .btn-login {
    background-color: #07c160;
    color: #fff;
    /* position: absolute;
    right: 5%;
    top: 5%; */
    font-size: 24rpx;
    margin: auto 0;
}

.cart-content {
    padding: 60rpx 0;
}
.cart-content .cart-none {
    width: 400rpx;
    /* height: 500rpx; */
    margin: 0 auto;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    padding-top: 100rpx;
}
.cart-content .cart-title {
    font-size: 36rpx;
    /* color: var(--themeColor); */
    /* border-top: 1rpx solid red; */
    border-bottom: 1rpx solid red;
    padding: 0 20rpx;
}

.cart-content .cart-list {
    padding: 20rpx;
}

.cart-content .cart-list .cart-item {
    display: flex;
    border-bottom: 1rpx solid #ccc;
}

.cart-content .cart-list .cart-item .item-check {
    flex: 1;
    /* justify-content: center; */
    margin: auto 0;
}

.cart-content .cart-list .cart-item .item-img {
    flex: 2;
}

.cart-content .cart-list .cart-item .item-img image {
    width: 80%;
}

.cart-content .cart-list .cart-item .item-info {
    flex: 5;
    display: flex;
    flex-direction: column;
}

.cart-content .cart-list .cart-item .item-info .item-title {
    color: #666;
}

.cart-content .cart-list .cart-item .item-info .item-pricenum {
    display: flex;
    justify-content: space-around;
    align-content: center;
    /* padding: 0 20rpx; */
    font-size: 32rpx;
    /* padding-bottom: 20rpx; */
}

.cart-content .cart-item .item-info .item-pricenum .item-price {
    color: var(--themeColor);
    /* font-size: 32rpx; */
    margin: auto 0;
}

.cart-content .cart-item .item-info .item-pricenum .item-count {
    display: flex;
    text-align: center;
    /* background-color: pink; */
    justify-content: center;
    align-items: center;
}

.cart-content .cart-item .item-info .item-pricenum .item-count view {
    border: 1rpx solid #ccc;
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
}

.cart-content .cart-item .item-pricenum .item-count text {
    display: inline-block;
    /* padding: 0 20rpx; */
    min-width: 72rpx;
    height: 36rpx;
    font-size: 36rpx;
}

.bottom-content {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
}

.bottom-content .check {
    flex: 2;
    padding-left: 20rpx;
    height: 100%;
    line-height: 90rpx;

}

/* .bottom-content .check .btn-checkAll {

} */

.bottom-content .bottom-sum {
    flex: 4;
    display: flex;
    /* justify-content: right; */
    flex-direction: column;
    text-align: end;
    line-height: 45rpx;
    height: 100%;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.bottom-content .bottom-sum view text {
    color: var(--themeColor);
    /* color: red; */
    font-weight: bold;
}

.bottom-content .pay {
    flex: 3;
    background-color: var(--themeColor);
    height: 100%;
    text-align: center;
    vertical-align: middle;
    line-height: 90rpx;
    color: #fff;
    font-weight: bold;

    /* background-color: pink; */
}