/* pages/search/search.wxss */
page {
    background-color: #dedede;
    padding: 20rpx;
}

.search-box {
    height: 60rpx;
    display: flex;
}

.search-box input {
    background-color: #fff;
    flex: 1;
    height: 100%;
    padding-left: 30rpx;
    /* border-radius: 10%; */
}

.search-box button {
    width: 110rpx;
    height: 100%;
    padding: 0;
    margin: 0 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
}

.search-content {
    margin-top: 30rpx;
}

.search-content .search-item {
    background-color: #fff;
    font-size: 26rpx;
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.search-none {
    width: 400rpx;
    margin: 0 auto;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    padding-top: 100rpx;
}