/* pages/pay/pay.wxss */

.receive-info {
    display: flex;
    flex-direction: row;
    /* flex-wrap: nowrap; */
    padding: 10rpx 20rpx;
    font-size: 32rpx;
    /* border: 1rpx solid red; */
    /* justify-content: space-between; */
}
.receive-info .receive-icon {
    flex: 1;
    /* border: 1rpx solid red; */
    display: inline-block;
    float: left;
}
/* .reveive-info .receive-icon .receive-icon {
    width: 30%;
} */
.receive-info .user-info {
    flex: 5;
    /* background-color: pink; */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    line-height: 42rpx;
    padding: 0 20rpx;
}
.receive-info .user-info .user-address {
    font-weight: 900;
}
.receive-info .user-info .user-namephone {
    display: flex;
    justify-content: start;
    color: #666;
    padding: 0 20rpx;
}
.receive-info .user-info .user-username {
    flex: 1;
    font-weight: 600;
}
.receive-info .user-info .user-phone {
    flex: 5;
}

/* .cart-content {
} */
.cart-content .cart-none {
    width: 400rpx;
    /* height: 500rpx; */
    margin: 0 auto;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    padding-top: 100rpx;
}
.cart-content .cart-title {
    font-size: 36rpx;
    /* color: var(--themeColor); */
    border-top: 1rpx solid red;
    border-bottom: 1rpx solid red;
    padding: 20rpx;
}

.cart-content .cart-list {
    padding: 20rpx;
}

.cart-content .cart-list .cart-item {
    display: flex;
    border-bottom: 1rpx solid #ccc;
}

.cart-content .cart-list .cart-item .item-img {
    flex: 2;
}

.cart-content .cart-list .cart-item .item-img image {
    width: 80%;
}

.cart-content .cart-list .cart-item .item-info {
    flex: 5;
    display: flex;
    flex-direction: column;
}

.cart-content .cart-list .cart-item .item-info .item-title {
    color: #666;
}

.cart-content .cart-list .cart-item .item-info .item-pricenum {
    display: flex;
    justify-content: space-between;
    align-content: center;
    font-size: 32rpx;
}

.cart-content .cart-item .item-info .item-pricenum .item-price {
    color: var(--themeColor);
    margin: auto 0;
}

.cart-content .cart-item .item-info .item-pricenum .item-count {
    display: flex;
    text-align: center;
    /* background-color: pink; */
    justify-content: center;
    align-items: center;
}

.cart-content .cart-item .item-pricenum .item-count text {
    display: inline-block;
    /* padding: 0 20rpx; */
    min-width: 72rpx;
    height: 36rpx;
    font-size: 36rpx;
}

.bottom-content {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
}

.bottom-content .bottom-sum {
    flex: 4;
    display: flex;
    /* justify-content: right; */
    flex-direction: column;
    text-align: end;
    line-height: 45rpx;
    height: 100%;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.bottom-content .bottom-sum view text {
    color: var(--themeColor);
    /* color: red; */
    font-weight: bold;
}

.bottom-content .pay {
    flex: 3;
    background-color: var(--themeColor);
    height: 100%;
    text-align: center;
    vertical-align: middle;
    line-height: 90rpx;
    color: #fff;
    font-weight: bold;
}